<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----------------AIDL进程间通信----------------"
                />

        <Button
                android:id="@+id/addDataBtn"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="addDataToService"/>

        <Button
                android:id="@+id/addDataInBtn"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="addDataToService in"/>

        <Button
                android:id="@+id/addDataOutBtn"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="addDataToService out"/>

        <Button
                android:id="@+id/webviewBtn"
                android:textAllCaps="false"
                android:text="To WebView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----------------Android与JavaScript交互----------------"
                />

        <Button
                android:id="@+id/loadUrlJsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通过loadUrl()调用JavaScript"
                android:textAllCaps="false"
                />

        <Button
                android:id="@+id/evaluateJsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通过evaluateJavascript()调用JavaScript"
                android:textAllCaps="false"
                />

        <Button
                android:id="@+id/jsInterfaceBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="js通过addJavascriptInterface调用Android"
                android:textAllCaps="false"
                />

        <Button
                android:id="@+id/promptBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="js通过onJsPrompt()方法调用Android"
                android:textAllCaps="false"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--SharedPreferences加ContentProvider进程间通信--"
                />

        <Button
                android:id="@+id/contentProviderBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sp加ContentProvider进程间通信"
                android:textAllCaps="false"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--MMKV进程间通信--"
            />
        <Button
            android:id="@+id/mmkvSaveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="存储"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/mmkvReadBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读取"
            android:textAllCaps="false"
            />
    </LinearLayout>
</ScrollView>